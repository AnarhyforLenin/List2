<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0fad7"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6a9c53"
        app:title="Напоминание"
        app:titleTextColor="#FFFFFF"
        />

    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/note_text"
        android:minHeight="200dp"
        android:gravity="top"
        android:padding="16dp"
        android:fontFamily="@font/fontone"
        android:textColor="#96B160"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Метка:"
            android:textSize="24dp"
            android:fontFamily="@font/fontone"/>
        <!--
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/red_tag"
            android:src="@drawable/red"
            android:scaleType="centerCrop"
            android:backgroundTint="@android:color/transparent"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/blue_tag"
            android:src="@drawable/blue"
            android:scaleType="centerCrop"
            android:backgroundTint="@android:color/transparent"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/green_tag"
            android:src="@drawable/green"
            android:scaleType="centerCrop"
            android:backgroundTint="@android:color/transparent"/>
            -->
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t1"
                android:buttonTint="#FF0000"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t2"
                android:buttonTint="#0027FF"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t3"
                android:buttonTint="#26FF00"/>
        </RadioGroup>
    </LinearLayout>

</LinearLayout>